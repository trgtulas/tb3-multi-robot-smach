<launch>
  <!-- No namespace here as we will share this description. 
       Access with slash at the beginning -->
  <param name="robot_description"
    command="$(find xacro)/xacro $(find turtlebot3_trackline)/urdf/turtlebot3_$(env TURTLEBOT3_MODEL).urdf.xacro" />

  <!-- BEGIN ROBOT 1-->
  <group ns="robot1">
    <param name="tf_prefix" value="robot1_tf" />
    <include file="$(find turtlebot3_smach)/launch/single_robot.launch" >
      <arg name="initial_pose" value="-x -2.0 -y 0.5 -z 0" />
      <arg name="robot_name"  value="Robot1" />
    </include>
  </group>

  <!-- BEGIN ROBOT 2-->
  <group ns="robot2">
    <param name="tf_prefix" value="robot2_tf" />
    <include file="$(find turtlebot3_smach)/launch/single_robot.launch" >
      <arg name="initial_pose" value="-x -2.0 -y 0.0 -z 0" />
      <arg name="robot_name"  value="Robot2" />
    </include>
  </group>

  <!-- BEGIN ROBOT 3-->
  <group ns="robot3">
    <param name="tf_prefix" value="robot3_tf" />
    <include file="$(find turtlebot3_smach)/launch/single_robot.launch" >
      <arg name="initial_pose" value="-x -2.0 -y -0.5 -z 0" />""
      <arg name="robot_name"  value="Robot3" />
    </include>
  </group>
</launch>