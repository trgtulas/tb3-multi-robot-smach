<launch>

  <arg name="first_robot"  default="robot1"/>
  <arg name="second_robot" default="robot2"/>
  <arg name="third_robot" default="robot3"/>
  
  <arg name="first_robot_x_pos" default="-1.0"/>
  <arg name="first_robot_y_pos" default="-0.5"/>
  <arg name="first_robot_z_pos" default=" 0.0"/>
  <arg name="first_robot_yaw"   default=" 0"/>

  <arg name="second_robot_x_pos" default="-1.5"/>
  <arg name="second_robot_y_pos" default="-0.5"/>
  <arg name="second_robot_z_pos" default=" 0.0"/>
  <arg name="second_robot_yaw"   default=" 0"/>

  <arg name="third_robot_x_pos" default="-2.0"/>
  <arg name="third_robot_y_pos" default="-0.5"/>
  <arg name="third_robot_z_pos" default=" 0.0"/>
  <arg name="third_robot_yaw"   default=" 0"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find turtlebot3_gazebo)/worlds/turtlebot3_world.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>  

  <group ns = "$(arg first_robot)">
    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_waffle_pi.urdf.xacro" />
    <param name="tf_prefix" value="robot_1_tf" />
	<node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
	<param name="use_gui" value="False"/>
	</node>

    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
      <param name="publish_frequency" type="double" value="50.0" />
      <param name="tf_prefix" value="robot_1_tf" />
    </node>
    
    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -model $(arg first_robot) -x $(arg first_robot_x_pos) -y $(arg first_robot_y_pos) -z $(arg first_robot_z_pos) -Y $(arg first_robot_yaw) -param robot_description" respawn="false" output="screen" />

  </group>

  <group ns = "$(arg second_robot)">
    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_waffle_pi.urdf.xacro" />
     <param name="tf_prefix" value="robot_2_tf" />
    
    	<node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
	<param name="use_gui" value="False"/>
	</node>
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
      <param name="publish_frequency" type="double" value="50.0" />
      <param name="tf_prefix" value="robot_2_tf" />
    </node>

    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -model $(arg second_robot) -x $(arg second_robot_x_pos) -y $(arg second_robot_y_pos) -z $(arg second_robot_z_pos) -Y $(arg second_robot_yaw) -param robot_description" respawn="false" output="screen" />

  </group>

  <group ns = "$(arg third_robot)">
    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_waffle_pi.urdf.xacro" />
     <param name="tf_prefix" value="robot_3_tf" />
    
    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
      <param name="use_gui" value="False"/>

    </node>
      <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
        <param name="publish_frequency" type="double" value="50.0" />
        <param name="tf_prefix" value="robot_3_tf" />
    </node>

    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -model $(arg third_robot) -x $(arg third_robot_x_pos) -y $(arg third_robot_y_pos) -z $(arg third_robot_z_pos) -Y $(arg third_robot_yaw) -param robot_description" respawn="false" output="screen" />

  </group>

</launch>
